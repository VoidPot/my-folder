---
import SkillBox from "../atoms/SkillBox.astro";
import Lowlight from "../atoms/Lowlight.astro";
import TechIcons from "../molecules/TechIcons.astro";
import { skillsData } from "../../constant";
---

<div
  class="m-auto min-h-screen flex items-center justify-center flex-col w-full gap-10"
>
  <h2 class="uppercase text-2xl font-serif text-gray-700">Thinks I know</h2>
  <div class="flex flex-row gap-10 items-start">
    <div class="flex flex-col gap-10 justify-center items-end">
      {
        skillsData
          .slice(0, 3)
          .map((each) => (
            <SkillBox
              isTextRight={true}
              htmlString={each.title}
              value={each.items.join(" <br /> ")}
            />
          ))
      }
    </div>
    <TechIcons />
    <div class="flex flex-col gap-10 justify-center items-start">
      {
        skillsData
          .slice(3)
          .map((each) => (
            <SkillBox
              htmlString={each.title}
              value={each.items.join(" <br /> ")}
            />
          ))
      }
    </div>
  </div>
</div>
